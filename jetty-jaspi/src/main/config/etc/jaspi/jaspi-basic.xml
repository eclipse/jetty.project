<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "https://www.eclipse.org/jetty/configure_10_0.dtd">

<Configure id="Server" class="org.eclipse.jetty.server.Server">

  <!-- ===================================================================== -->
  <!-- Configure a factory for Jaspi                                         -->
  <!-- ===================================================================== -->
  <Call name="addBean">
   <Arg>
        <New id="jaspiAuthConfigFactory" class="org.eclipse.jetty.security.jaspi.BasicAuthConfigFactory" />
   </Arg>
  </Call>
  <Call class="jakarta.security.auth.message.config.AuthConfigFactory" name="setFactory">
      <Arg><Ref refid="jaspiAuthConfigFactory" /></Arg>
  </Call>
</Configure>
